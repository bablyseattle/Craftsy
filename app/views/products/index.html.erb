
  <% @products.each do |product| %>
  <div class="col-sm-6">
    <div class="card" style="width: 20rem;">
      <img class="card-img-top" src="https://iheartcraftythings.com/wp-content/uploads/2017/04/twirling-parrot-craft-2-400x400.jpg" alt="Card image cap">
      <div class="card-block">
        <h4 class="card-title"><%= product.name %></h4>
        <p class="card-text">$ <%= product.price %></p>
        <div class="btn btn-info"><%= link_to "Show Details", product_path(product) %></div>
      </div>
    </div>
  </div>
  
  <% end %>
