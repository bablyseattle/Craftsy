<div class="card" style="width: 20rem;">
  <%= image_tag @product.avatar.url(:medium) %>
  <div class="card-block">
    <h4 class="card-title">
      <h4 class="card-title"><%= @product.name %></h4>
      <p class="card-text">$ <%= @product.price %></p></h4>
    <p class="card-text"><%= @product.details %></p>
    <a href="#" class="btn btn-primary">Add to cart</a>
  </div>
</div>

<% if current_user && current_user.admin %>

<div class="btn-group">
    <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
    <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>

  <% end %>


<h3 class="reviews_title">
  <%= @product.reviews.count %> reviews
</h3>

<div id="reviews">
  <%= render :partial => @product.reviews %>
</div>
<%= simple_form_for [@product, Review.new]  do |f| %>
  <div class="field">
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add reviews", class: "btn btn-primary" %>
<% end %>